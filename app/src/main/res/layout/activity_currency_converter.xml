<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrencyConverter">

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="463dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">


        <TextView
            android:id="@+id/textView"
            android:layout_width="257dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="74dp"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="49dp"
            android:text="Currency Converter"
            android:textSize="26dp" />

        <TextView
            android:layout_width="138dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="148dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/currency_to_be_converted"
            android:text="Enter amount"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/currency_to_be_converted"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="134dp"
            android:layout_marginEnd="43dp"
            android:inputType="numberDecimal"
            tools:ignore="NotSibling" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="240dp"
            android:layout_toStartOf="@+id/from"
            android:text="From Currency:"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/from"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="191dp"
            android:layout_marginEnd="42dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="41dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="202dp"
            android:layout_toStartOf="@+id/to"
            android:text="To Currency:"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/to"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="180dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="106dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="119dp"
            android:layout_toStartOf="@+id/currency_converted"
            android:text="Convert" />

        <TextView
            android:id="@+id/currency_converted"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="126dp"
            android:textSize="14dp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>